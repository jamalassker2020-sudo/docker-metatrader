       }
     },
     
     "CLOSE_example": {
       "action": "CLOSE",
       "source": "HFT-ULTRA-2026",
       "version": "1.0",
       "timestamp": "2026-01-29T14:35:12.456Z",
       "timestamp_unix": 1769780112456,
       "trade_id": "HFT-M1ABC2D-XY3Z",
       "symbol": "BTC/USDT",
       "symbol_mt5": "BTCUSD",
       "symbol_binance": "BTCUSDT",
       "direction": "BUY",
       "order_type": 0,
       "entry_price": 105234.56,
       "current_price": 105249.56,
       "take_profit": 105249.56,
       "stop_loss": 105229.56,
       "trailing_stop": null,
       "lot_size": 0.01,
       "pip_value": 1.0,
       "pip_size": 0.01,
