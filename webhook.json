     },
     
     "TEST_example": {
       "action": "TEST",
       "source": "HFT-ULTRA-2026",
       "version": "1.0",
       "timestamp": "2026-01-29T14:00:00.000Z",
       "timestamp_unix": 1769778000000,
       "message": "Connection test from HFT Ultra 2026"
     }
   },

